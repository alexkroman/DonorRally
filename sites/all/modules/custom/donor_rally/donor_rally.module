function competitive_drive_block($op = 'list', $delta = 0, $edit = array()) {
  switch ($op) {
    case 'list':
     return array(
       0 => array(
         'info' => t('Team Progress Thermometer'),
         'cache' => BLOCK_NO_CACHE,
       ),
       1 => array(
         'info' => t('Donate Button'),
         'cache' => BLOCK_CACHE_PER_PAGE,
       ),
       2 => array(
         'info' => t('Leaderboard Button'),
         'cache' => BLOCK_CACHE_GLOBAL,
       ),
       3 => array(
         'info' => t('Team Progress Statistics'),
         'cache' => BLOCK_NO_CACHE,
       ),
       4 => array(
         'info' => t('Team Page Button'),
         'cache' => BLOCK_CACHE_PER_PAGE,
       ),
       5 => array(
         'info' => t('New Team Blog Post'),
         'cache' => BLOCK_CACHE_PER_PAGE,
       ),
       6 => array(
         'info' => t('Team Coordinator Log in Button'),
         'cache' => BLOCK_CACHE_GLOBAL,
       ),
       7 => array(
         'info' => t('Team Coordinator Dashboard Button'),
         'cache' => BLOCK_NO_CACHE,
       ),
     );
    case 'configure':
      return array();
    case 'view':
      global $user;
      $node = content_profile_load(COMPETITIVE_DRIVE_CONTENT_PROFILE_TYPE, $user->uid);
      if (!$node) {
        $node = menu_get_object();
        if ($node && $node->type != COMPETITIVE_DRIVE_CONTENT_PROFILE_TYPE) {
          $node = NULL;
        }
      }

      $vars = array();
      if ($node) {
        $vars = competitive_drive_team_stats($node);
        $vars['node'] = $node;
      }
      
      $theme_functions = array(
        0 => 'competitive_drive_team_progress_thermometer',
        1 => 'competitive_drive_team_donate_button',
        2 => 'competitive_drive_team_leaderboard_button',
        3 => 'competitive_drive_team_progress_stats',
        4 => 'competitive_drive_team_page_button',
        5 => 'competitive_drive_new_blog_post_button',
        6 => 'competitive_drive_team_coordinator_login_button',
        7 => 'competitive_drive_team_coordinator_account_button',
      );
      if (isset($theme_functions[$delta])) {
        return array('subject' => '', 'content' => theme($theme_functions[$delta], $vars));
      }
  }
  return array('subject' => '', 'content' => '');
}

