/**
 * Refreshes all teams' points and statistics by querying Salsa and
 * recalculating totals.
 */
function competitive_drive_refresh_all() {
  $report = _competitive_drive_query_cash_aggregate();

  $salsa_cash = array();
  if (variable_get('competitive_drive_debug', FALSE)) {
    /* We're debugging; use the aliases to map the cash values */
    $aliases = variable_get('competitive_drive_debug_aliases', array());
    foreach ($report as $tracking_code => $cash) {
      if (isset($aliases['by-name'][$tracking_code])) {
        $salsa_cash[$aliases['by-name'][$tracking_code]] = $cash;
      }
    }
  }
  else {
    /* Production: Use the Tracking_Code field from the report */
    $prefix = COMPETITIVE_DRIVE_TRACKING_CODE_PREFIX;
    $regex = "/^{$prefix}(\d+)$/";
    foreach ($report as $tracking_code => $cash) {
      if (preg_match($regex, $tracking_code, $matches) === 1) {
        $team_nid = $matches[1];
        $salsa_cash[$team_nid] = $cash;
      }
      else {
        // @todo: record the error?
      }
    }
  }

  $cash_scale = (float)variable_get('competitive_drive_cash_scale', 1.0);
  $food_scale = (float)variable_get('competitive_drive_food_scale', 1.0);
  $volunteer_scale = (float)variable_get('competitive_drive_volunteer_scale', 1.0);

  $current_all = _competitive_drive_fetch_current_team_stats();
  foreach ($current_all as $nid => $now) {
    if (isset($salsa_cash[$nid])) {
      $now['cash'] = $salsa_cash[$nid];
    }
    else {
      // no-op; we didn't get an online cash value from Salsa for this team, so
      // just use the current value for calculating new totals
    }
    db_query(
      'UPDATE {content_type_team} SET ' .
        'field_cash_value = %f, ' .
        'field_total_points_value = (%f+%f)*%f + (%f+%f)*%f + (%f+%f)*%f, ' .
        'field_points_per_capita_value = ((%f+%f)*%f + (%f+%f)*%f + (%f+%f)*%f) / %d ' .
      'WHERE nid = %d',
      array(
        $now['cash'],
        $now['cash'], $now['offline_cash'], $cash_scale, $now['food'], $now['offline_food'], $food_scale, $now['volunteer'], $now['offline_volunteer'], $volunteer_scale,
        $now['cash'], $now['offline_cash'], $cash_scale, $now['food'], $now['offline_food'], $food_scale, $now['volunteer'], $now['offline_volunteer'], $volunteer_scale,
        $now['size'],
        $nid
      )
    );
  }
  drupal_flush_all_caches();
}

/**
 * Fetches current size, cash values, food values, volunteer values for all
 * teams (from the database).
 */
function _competitive_drive_fetch_current_team_stats() {
  $result = db_query(
    'SELECT nid, ' .
    'field_cash_value AS cash, ' .
    'field_food_value AS food, ' .
    'field_volunteer_value AS volunteer, ' .
    'field_offline_cash_value AS offline_cash, ' .
    'field_offline_food_value AS offline_food, ' .
    'field_offline_volunteer_value AS offline_volunteer, ' .
    'field_size_value AS size ' .
    'FROM {content_type_team}'
  );
  $team_stats = array();
  while ($current = db_fetch_array($result)) {
    $nid = $current['nid'];
    $team_stats[$nid] = $current;
    unset($team_stats[$nid]['nid']);
    foreach ($team_stats[$nid] as $field => $value) {
      if (empty($value)) {
        $team_stats[$nid][$field] = 0.0;
      }
    }
  }
  return $team_stats;
}

/**
 * Queries DIA aggregate report of donation totals for each team and returns
 * results in a nicer format.
 */
function _competitive_drive_query_cash_aggregate() {
  $cash_aggregate_query = array(
    '#script' => 'getReport.sjs',
    '#fields' => COMPETITIVE_DRIVE_DIA_REPORT_CASH_AGGREGATE,
  );
  $result = salsa_api_query($cash_aggregate_query);
  $team_stats = array();

  // The report comes in a different format when there's only one. (Sigh.)
  if (isset($result['report']['row']['tracking_code'])) {
    $result['report']['row'] = array(
      array(
        'tracking_code' => $result['report']['row']['tracking_code'],
        'amount' => $result['report']['row']['amount'],
      )
    );
  }

  foreach ($result['report']['row'] as $item) {
    if (!empty($item['tracking_code'])) {
      $team_stats[$item['tracking_code']] = $item['amount'];
    }
  }
  return $team_stats;
}

/**
 * Set up Salsa Tracking_Code aliases for debugging.
 */
function _competitive_drive_set_debug_aliases() {
  $team_stats = _competitive_drive_query_cash_aggregate();
  $team_names = array_keys($team_stats);

  // Find all team node ids and assign nids to each entry in $team_names.
  $team_aliases = array();
  $result = db_query("SELECT nid, title FROM {node} WHERE type = 'team'");
  $i = 0;
  while ($node = db_fetch_object($result)) {
    if (!isset($team_names[$i])) {
      break;
    }
    $team_aliases['by-nid'][$node->nid] = $team_names[$i];
    $team_aliases['by-name'][$team_names[$i]] = $node->nid;
    $i++;
  }
  drupal_set_message("Aliased $i out of " . count($team_names) . " teams...<br />" . dpr($team_aliases, true));
  variable_set('competitive_drive_debug_aliases', $team_aliases);
}

/**
 * Formats a value (points or raw) for display.
 */
function _competitive_drive_format_value($value) {
  return number_format($value, 0, '.', ',');
}

/**
 * Generate Salsa Tracking_Code field for a team, given its node.
 */
function _competitive_drive_team_tracking_code($node) {
  return COMPETITIVE_DRIVE_TRACKING_CODE_PREFIX . $node->nid;
}

/**
 * Calculate a team's statistics directly from node values.
 */
function competitive_drive_team_stats($node) {
  $point_scales = array(
    'cash' => variable_get('competitive_drive_cash_scale', 1.0),
    'food' => variable_get('competitive_drive_food_scale', 1.0),
    'volunteer' => variable_get('competitive_drive_volunteer_scale', 1.0),
  );

  $stats = array();
  $stats['total'] = 0.0;
  $stats['total_goal'] = 0.0;
  foreach (array('cash', 'food', 'volunteer') as $type) {
    // raw values (USD, pounds, shifts, etc.); points (scaled raw)
    $stats[$type .'_raw'] = $node->{'field_'. $type}[0]['value'] + $node->{'field_offline_' .$type}[0]['value'];
    $stats[$type .'_raw_goal'] = $node->{'field_'. $type .'_goal'}[0]['value'];

    // points values
    $stats[$type] = $stats[$type .'_raw'] * $point_scales[$type];
    $stats[$type .'_goal'] = $stats[$type .'_raw_goal'] * $point_scales[$type];

    // totals
    $stats['total'] += $stats[$type];
    $stats['total_goal'] += $stats[$type .'_goal'];
  }

  // provide a formatted version as well
  foreach ($stats as $k => $v) {
    $stats[$k .'_view'] = _competitive_drive_format_value($v);
  }

  $stats['per_capita'] = $stats['total'] / $node->field_size[0]['value']; 
  return $stats;
}

